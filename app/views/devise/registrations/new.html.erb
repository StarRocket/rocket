<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <div class="form-group">
      <%= f.input :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "請閱讀以下會員使用條款及隱私權條款，勾選即視同您同意以下條款" %>
      <%= f.input_field :terms, as: :boolean %>
      <%= f.label :terms %>（<%= link_to "會員條款連結", "#" %>）
    </div>
    <div class="form-group">
      <%= f.input_field :privacy_policy, as: :boolean %>
      <%= f.label :privacy_policy %>（<%= link_to "隱私權條款連結", "#" %>）
    </div>

     <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
